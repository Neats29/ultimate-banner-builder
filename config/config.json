{
  "paths": {
    "html": {
      "src": "./src/**/*.html",
      "all": "./**/*.html",
      "config": "./config/.htmllintrc"
    },

    "js": {
      "src": "./src/**/*.js",
      "all": "./**/*.js"
    },

    "scss": {
      "src": "./src/**/*.scss",
      "all": "./**/*.scss",
      "config": "./config/sass-lint.yml"
    }
  }
}
